{
  "name": "eticket",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "preci": "rm -rf node_modules",
    "ci": "pnpm install --frozen-lockfile",
    "build": "babel src --out-dir dist",
    "start": "node dist/index.js",
    "dev": "nodemon --exec pnpm run restart",
    "debug": "rimraf dist && pnpm run build && ndb dist/index.js",
    "restart": "rimraf dist && pnpm run build && pnpm run start",
    "test": "jest --passWithNoTests",
    "test:ci": "pnpm test -- --coverage --silent",
    "test:unit": "pnpm test -- --watch -c jest-unit-config.js",
    "test:integration": "pnpm test -- --watch -c jest-integration-config.js",
    "prettier:check": "prettier --check .",
    "prettier:fix": "prettier --write .",
    "lint:check": "eslint .",
    "lint:fix": "eslint --fix .",
    "pre-commit": "lint-staged",
    "prepare": "husky install"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx}": [
      "pnpm prettier",
      "pnpm lint:fix",
      "pnpm test",
      "git add"
    ]
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@babel/cli": "^7.23.4",
    "@babel/core": "^7.23.7",
    "@babel/plugin-transform-class-properties": "^7.23.3",
    "@babel/plugin-transform-object-rest-spread": "^7.23.4",
    "@babel/preset-env": "^7.23.7",
    "@commitlint/cli": "^17.8.1",
    "@commitlint/config-conventional": "^17.8.1",
    "@types/jest": "^29.5.11",
    "babel-core": "^6.26.3",
    "babel-jest": "^29.7.0",
    "babel-plugin-module-resolver": "^5.0.0",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^8.10.0",
    "eslint-import-resolver-babel-module": "^5.3.2",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^4.2.1",
    "git-commit-msg-linter": "^4.11.1",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-puppeteer": "^6.2.0",
    "lint-staged": "^13.3.0",
    "nodemon": "^2.0.22",
    "prettier": "^2.8.8",
    "puppeteer": "^21.7.0",
    "rimraf": "^4.4.1"
  },
  "dependencies": {
    "@prisma/client": "^5.7.1",
    "app-root-path": "^3.1.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^6.2.0",
    "morgan": "^1.10.0",
    "random-useragent": "^0.5.0",
    "winston": "^3.11.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
