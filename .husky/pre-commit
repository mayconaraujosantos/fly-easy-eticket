#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# Execute o lint-staged para tarefas especÃ­ficas antes do commit
npx lint-staged

# Execute o Prettier para verificar e corrigir o estilo
npm run prettier:check
