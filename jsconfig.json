{
	"compilerOptions": {
		"baseUrl": "src",
		"moduleResolution": "Node",
		"target": "ES2020",
		"strictNullChecks": true,
		"strictFunctionTypes": true,
		"paths": {
			"@common/*": ["common/*"],
			"@domain/*": ["domain/*"],
			"@infra/*": ["infra/*"],
			"@presentation/*": ["presentation/*"],
			"@scraper/*": ["scraper/*"]
		}
	},
	"typeAcquisition": {
		"include": ["src", "tests"]
	},
	"exclude": ["node_modules", "**/node_modules/*"]
}
